    <script>
        function goToAddNew() { window.location.href = '/products/cart/addCart/' }
        function goToEdit(id) { window.location.href = '/products/cart/editCart/' + id }
        function deleteProduct(id) {
            $.ajax({
                type: "DELETE", url:
                    '/products/cart/deleteCart/' + id, success: function (data) {
                        if (data.res == true) {
                            window.location.href = '/products/cart'
                        }
                    }
            });
        }
    </script>

