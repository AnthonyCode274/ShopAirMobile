            <div class="row">
                <div class="col-12">
                    <!-- Recent Order Table -->
                    <div class="card card-table-border-none" id="recent-orders">
                        <div class="card-header justify-content-between">
                            <h1>Recent Cart</h1>
                            <div class="date-range-report">
                                <span></span>
                            </div>

                        </div>
                        <div class="btn-add-product">
                            <button type="button" class="btn btn-info btn-add" onclick="goToAddNew()">
                                Add Cart
                            </button>
                        </div>
                        <div class="card-body pt-0 pb-5">
                            <table class="table card-table table-responsive table-responsive-large">
                                <!-- Header table -->
                                <thead>
                                    <tr>
                                        <th class="d-none d-md-table-cell">
                                            <h5>ID</h5>
                                        </th>
                                        <th>
                                            <h5>quantity</h5>
                                        </th>
                                        <th class="res-title-col-table">
                                            <h5>User</h5>
                                        </th>
                                        <th class="d-none d-md-table-cell">
                                            <h5>Product</h5>
                                        </th>
                                    </tr>
                                </thead>
                                <!-- End header table -->

                                <!-- Row in table -->
                                <tbody id="tb_table">
                                    {{#each listBanner}}
                                    <tr>
                                        <td style="
                                            width: auto;
                                            max-width: 80px;
                                            white-space: nowrap;
                                            nowrap; overflow: 
                                            hidden; text-overflow: 
                                            ellipsis; 
                                            display: -webkit-box;"
                                            class="d-none d-md-table-cell">
                                            {{this._id}}
                                        </td>
                                        <td style="max-width: 150px;">
                                            <p class="text-dark res-title-col-table" href="">
                                                {{this.quantity}}
                                            </p>
                                        </td>
                                        <td style="max-width: 150px;">
                                            <p class="text-dark res-title-col-table" href="">
                                                {{this.user}}
                                            </p>
                                        </td>
                                        <td style="max-width: 150px;">
                                            <p class="text-dark res-title-col-table" href="">
                                                {{this.product}}
                                            </p>
                                        </td>
                                        <td>
                                            <div class="res-crud-lg text-right">
                                                <button type="button" class="btn btn-success"
                                                    onclick="goToEdit('{{this._id}}')">
                                                    Edit
                                                </button>
                                                <button type="button" class="btn btn-danger"
                                                    onclick="deleteProduct('{{this._id}}')"
                                                    >Remove</button>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}

