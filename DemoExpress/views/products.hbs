                                    {{#each listSP}}
                                    <tr>
                                        <td style="
                                            width: auto;
                                            max-width: 80px;
                                            white-space: nowrap;
                                            nowrap; overflow: 
                                            hidden; text-overflow: 
                                            ellipsis; 
                                            display: -webkit-box;"
                                            class="d-none d-md-table-cell">
                                            {{this._id}}
                                        </td>
                                        <td>
                                            <img style="width: auto; max-width: 100px; height: 100px; max-height: 100px;"
                                                class="img-fluid rounded float-left styleImageProduct rounded"
                                                alt="Image product"
                                                src="http://localhost:9000/images/{{this.imgProduct}}" />
                                        </td>
                                        <td style="max-width: 150px;">
                                            <p class="text-dark res-title-col-table" href="">
                                                {{this.productName}}
                                            </p>
                                        </td>
                                        <td style="max-width: 150px;">
                                            <p class="text-dark res-title-col-table" href="">
                                                {{this.detailsProduct}}
                                            </p>
                                        </td>
                                        <td class="d-none d-md-table-cell">{{formatDate
                                            this.date
                                            }}</td>
                                        <td class="d-none d-md-table-cell">{{this.price}}$</td>
                                        <td class="d-none d-md-table-cell">{{this.saleUpTo}}%</td>

                                        <td>
                                            <div class="res-crud-lg text-right">
                                                <button type="button" class="btn btn-success"
                                                    onclick="goToEdit('{{this._id}}')">
                                                    Edit
                                                </button>
                                                <button type="button" class="btn btn-danger"
                                                    onclick="deleteProduct('{{this._id}}')"
                                                    >Remove</button>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}

