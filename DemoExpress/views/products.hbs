    <script>
        function goToAddNew() { window.location.href = '/products/add_new/' }
        function goToEdit(id) { window.location.href = '/products/update/' + id }
        function deleteProduct(id) {
            $.ajax({
                type: "DELETE", url:
                    '/products/deleteProduct/' + id, success: function (data) {
                        if (data.res == true) {
                            window.location.href = '/products'
                        }
                    }
            });
        }
    </script>

