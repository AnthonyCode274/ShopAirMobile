                                        <tr>
                                            <th class="d-none d-md-table-cell">
                                                <h5>Product ID</h5>
                                            </th>
                                            <th>
                                                <h5>Image Product</h5>
                                            </th>
                                            <th class="res-title-col-table">
                                                <h5>Product Name</h5>
                                            </th>
                                            <th class="d-none d-md-table-cell">
                                                <h5>Date</h5>
                                            </th>
                                            <th class="d-none d-md-table-cell">
                                                <h5>Price</h5>
                                            </th>
                                            <th class="d-none d-md-table-cell">
                                                <h5>Sale</h5>
                                            </th>
                                        </tr>
                                    </thead>
                                    <!-- End header table -->

                                    <!-- Row in table -->
                                    <tbody id="tb_table">
                                        {{#each listSP}}
                                        <tr>
                                            <td id="truncateLongTexts" class="d-none d-md-table-cell">
                                                {{ this._id }}
                                            </td>
                                            <td>
                                                <img width="400" height="400"
                                                    class="img-fluid rounded float-left styleImageProduct"
                                                    alt="Image product" 
                                                    src="http://localhost:3003/images/{{ this.imgProduct }}">
                                            </td>
                                            <td style="max-width: 150px;">
                                                <p class="text-dark res-title-col-table" href="">
                                                    {{ this.productName }}
                                                </p>
                                            </td>
                                            <td class="d-none d-md-table-cell">{{ formatDate this.date }}</td>
                                            <td class="d-none d-md-table-cell">{{ this.price }}$</td>
                                            <td class="d-none d-md-table-cell">{{ this.saleUpTo }}%</td>
                                            
                                            <td>
                                                <div class="res-crud-lg text-right">
                                                    <button type="button" class="btn btn-success"
                                                        onclick="goToEdit('{{this._id}}')">
                                                        Edit
                                                    </button>
                                                    <button type="button" class="btn btn-danger"
                                                        onclick="deleteProduct('{{this._id}}')">Remove</button>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}

