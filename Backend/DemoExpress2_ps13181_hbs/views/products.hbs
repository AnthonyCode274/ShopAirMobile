        <script>
            function goToAddNew() {
                window.location.href = '/products/add_new/'
            }

            function goToEdit(_id) {
                window.location.href = '/products/update/' + _id
            }

            function deleteProduct(id) {
                $.ajax({
                    type: 'DELETE',
                    url: '/products/delete/' + id,
                    success: function (data) {
                        if (data.res == true) {
                            window.location.href = '/products'
                        }
                    }
                });
            }
        </script>


